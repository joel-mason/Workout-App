<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_layout"
    android:background="#4CAF50">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Let&apos;s get started"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:singleLine="false"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/linear_layout0">

        <TextView
            android:layout_width="136dp"
            android:text="Username"
            android:layout_marginTop="10dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"
            android:id="@+id/sometext" />

        <EditText
            android:layout_width="fill_parent"
            android:inputType="textEmailAddress"
            android:id="@+id/emailAddress"
            android:layout_marginTop="10dp"
            style="@style/rounded_text"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/linear_layout1">

        <TextView
            android:layout_width="136dp"
            android:text="Password"
            android:layout_marginTop="2dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"/>

        <EditText
            android:layout_width="fill_parent"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:layout_marginTop="2dp"
            style="@style/rounded_text"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout2">

        <TextView
            android:layout_width="136dp"
            android:text="Password"
            android:layout_marginTop="2dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"/>

        <EditText
            android:layout_width="fill_parent"
            android:inputType="textPassword"
            android:id="@+id/password2"
            android:layout_marginTop="2dp"
            style="@style/rounded_text"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout3">

        <TextView
            android:layout_width="136dp"
            android:text="Forename"
            android:layout_marginTop="2dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"/>

        <EditText
            android:layout_width="fill_parent"
            android:inputType="textPersonName"
            android:id="@+id/forename"
            android:layout_marginTop="2dp"
            style="@style/rounded_text"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout4">

        <TextView
            android:layout_width="136dp"
            android:text="Surname"
            android:layout_marginTop="2dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"/>

        <EditText
            android:layout_width="fill_parent"
            android:id="@+id/surname"
            android:layout_marginTop="2dp"
            style="@style/rounded_text"
            android:textColor="#FFFFFF"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout5"
        android:weightSum="1">

        <TextView
            android:layout_width="136dp"
            android:text="Weight"
            android:layout_marginTop="2dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"/>

        <EditText
            android:layout_width="157dp"
            android:inputType="number"
            android:id="@+id/rowWeight"
            android:layout_marginTop="2dp"
            style="@style/rounded_text"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="kg"
            android:layout_marginTop="2dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"
            android:id="@+id/textview"
            android:layout_weight="1.60" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout6"
        android:weightSum="1">

        <TextView
            android:layout_width="136dp"
            android:text="Height"
            android:layout_marginTop="2dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"/>

        <EditText
            android:layout_width="157dp"
            android:inputType="number"
            android:id="@+id/height"
            android:layout_marginTop="2dp"
            style="@style/rounded_text"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="cm"
            android:layout_marginTop="2dp"
            android:textColor="#66FFFFFF"
            style="@style/rounded_text"
            android:id="@+id/textview2"
            android:layout_weight="2.04" />
    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/nextButton"
            android:width="400dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/rounded_but"/>

</LinearLayout>